<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="user.ModificationUserController">
    <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Modifier l'utilisateur" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="10">
            <Label text="Nom :" minWidth="100"/>
            <TextField fx:id="nomField" promptText="Entrez le nom"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Prénom :" minWidth="100"/>
            <TextField fx:id="prenomField" promptText="Entrez le prénom"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Email :" minWidth="100"/>
            <TextField fx:id="emailField" promptText="Entrez l'email"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Rôle :" minWidth="100"/>
            <TextField fx:id="roleField" promptText="Ex: Admin, User..."/>
        </HBox>

        <Button fx:id="btnEnregistrer" text="Enregistrer les modifications" onAction="#enregistrerModification" style="-fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>
